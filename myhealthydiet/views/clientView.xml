<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="client_info">
            <field name="name">Client Info</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Info">
                        <group>
                            <field name="age"/>
                            <field name="height"/>
                            <field name="genre"/>
                            <field name="goal"/>
                        </group>
                        <group>
                            <field name="weights"/>
                            <field name="diets"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
